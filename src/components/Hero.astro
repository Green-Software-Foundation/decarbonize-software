<script>
  const date = new Date("November 10, 2022 17:00:00 GMT");
  const formatedDate = date.toLocaleString("en-US", {
    month: "long",
    day: "2-digit",
  });
  const formatedTime = date.toLocaleString("en-US", {
    hour: "numeric",
    minute: "numeric",
    timeZoneName: "short",
  });
  const nth = function (d: number) {
    if (d > 3 && d < 21) return "th";
    switch (d % 10) {
      case 1:
        return "st";
      case 2:
        return "nd";
      case 3:
        return "rd";
      default:
        return "th";
    }
  };
  const timeElement = document.getElementById("time");
  if (timeElement) {
    timeElement.innerHTML = `${formatedDate}${nth(
      date.getDate()
    )} - ${formatedTime}`;
  }
</script>
